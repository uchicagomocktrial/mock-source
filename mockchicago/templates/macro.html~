{% macro build_officer_modal(member, index) -%}
<div class="modal fade"
     id="{{ "uniqueModal{}".format(index) }}"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">{{ "{}, {}".format(member.full_name(), member.title()) }}</h4>
      </div>
      <div class="modal-body">
        <div class="center-block">
          <img src="{{ member.img_path() }}"
               class="img-responsive center-block person-full"/>
        </div>
        <p>{{ member.msg_with_email() }} </p>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
{% endmacro %}


{% macro build_officer(member, index) -%}
<div class="col-xs-6 col-sm-3 col-md-2 col-md-5ths vcenter">
  <div class="team boxed-grey">
    <div class="inner">
	  <h5>{{ member.full_name() }} </h5>
      <p class="subtitle"> {{ member.title() }} </p>
      <div class="avatar">
        {% if index > 0 %}
        <a data-toggle="modal" href="#" data-target="{{ "#uniqueModal{}".format(index) }}">
          {% endif %}

          <img src="{{ member.img_path() }}" alt="" class="img-responsive person-thumb"/>
          {% if index > 0 %}
          </a>
          {% endif %}

      </div>
    </div>
  </div>
</div>
{% endmacro %}


{% macro build_officer_modals(members_with_modals) -%}
{% for member in members_with_modals %}
{{ build_officer_modal(member, loop.index) }}
{% endfor %}
{% endmacro %}

